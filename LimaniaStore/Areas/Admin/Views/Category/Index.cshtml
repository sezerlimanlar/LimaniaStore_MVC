@model List<Category>
		
<div class="card shadow border-0 mt-4 ">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Category List</h2>
			</div>
		</div>
	</div>
	<div class="card-body pb-4">
		<div class="row pb-3 ">
			<div class="col-12 text-end">
				<a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus"></i> Create New Category</a>
			</div>
		</div>
		<table class="table table-bordered ">
			<thead>
				<tr>
					<th>Kategori İsmi</th>
					<th>Kategori Numarası</th>
					<th>Kategori Düzenle & Sil</th>
				</tr>
			</thead>
			@foreach (var item in Model.OrderBy(c => c.DisplayOrder))
			{
				<tbody>
					<tr>
						<td>@item.Name</td>
						<td>@item.DisplayOrder</td>
						<td>
							<div class="btn-group" role="group">
								<a asp-controller="Category" asp-action="Edit" class="btn btn-success mx-2" asp-route-id="@item.Id">
									<i class="bi bi-pencil-square"></i> Edit
								</a>
								<a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
									<i class="bi bi-trash"></i> Delete
								</a>
							</div>

						</td>

					</tr>
				</tbody>
			}
		</table>
	</div>
</div>